<div class="form border margin--no">
  <div class="form__img">
    <%= current_user.avatar.attached? ? image_tag(current_user.avatar) : image_tag("avatar.png") %>
  </div>
  <%= form_with model: [@tweet, comment] do |form| %>

    <div class="field_tweet">
      <%= form.text_field :body, placeholder: "Remember to thing before write..."%>
    </div>

    <div>
      <%= form.submit "Comment", class: "button right" %>
    </div>

  <% end %>
</div>
